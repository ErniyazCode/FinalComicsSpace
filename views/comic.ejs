<!DOCTYPE html>
<html lang="en">
<%- include('head') %>
<body class="d-flex flex-column min-vh-100 bg-light">
<%- include('navbar') %>

<div class="container">
    <div class="row">
        <div class="card w-100 m-5 p-5">
            <div class="row g-0">
                <div class="col-md-5">
                    <div id="carousel<%= comic._id %>" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="<%= comic.img1 %>" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= comic.img2 %>" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= comic.img3 %>" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= comic._id %>" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= comic._id %>" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= comic.name %></h5>
                        <p class="card-text">Description: <%= comic.hotel %></p>
                        <p class="card-text text-small text-danger">Price: <%= comic.price %>$</p>
                        <form action="/history/viewed/<%= comic._id %>" method="post">
                            <button id="addToCartBtn" class="btn btn-primary">Add to profile</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>

</body>
</html>